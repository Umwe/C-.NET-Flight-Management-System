@page
@model FMS.Pages.Booking.CreateBookingModel
@{
    ViewData["Title"] = "Create Booking";
}
<div class="container">
    <h2 class="text-center label">Booking Details</h2>
    <hr />

    <div class="alert alert-success">
        <span>@TempData["BookingMessage"]</span>
    </div>

    <form method="POST" class="mt-4" asp-page-handler="OnPost">
        @Html.AntiForgeryToken()

        <div class="row">
            <!-- Left column -->
            <div class="col">
                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input type="text" required class="form-control mt-2" name="firstName" placeholder="First Name" value="@Model.booking.firstName">
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input type="text" required class="form-control mt-2" name="lastName" placeholder="Last Name" value="@Model.booking.lastName">
                </div>

            </div>

            <!-- Right column -->
            <div class="col">
                <div class="form-group">
                    <label for="number">Number of people</label>
                    <input type="text" required class="form-control mt-2" name="number" placeholder="Number of people" value="@Model.booking.number">
                </div>
                <div class="form-group">
                    <label for="payment">Payment Method</label>
                    <input type="text" required class="form-control mt-2" name="payment" placeholder="Payment" value="@Model.booking.payment">
                </div>          
            </div>
        </div>

        <button type="submit" class="btn btn-primary mt-4">Submit</button>

    </form>
</div>