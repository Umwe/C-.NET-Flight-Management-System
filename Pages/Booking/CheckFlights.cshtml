@page
@model FMS.Pages.Booking.CheckFlightsModel
@{
    ViewData["Title"] = "Check Flight";
}
<div class="container">
    <h2 class="text-center label">Flight Information</h2>
    <hr />

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Flight ID</th>
                <th>Airline Name</th>
                <th>Origin</th>
                <th>Destination</th>
                <th>Departure Time</th>
                <th>Arrival Time</th>
                <th>Available Seats</th>
                <th>Ticket Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var flight in Model.FlightList)
    {
        <tr>
            <td>@flight.flightID</td>
            <td>@flight.airlineId</td>
            <td>@flight.origin</td>
            <td>@flight.destination</td>
            <td>@flight.departureTime</td>
                    <td>@flight.arrivalTime</td>
                    <td>@flight.availableSeats</td>
            <td>@flight.ticketPrice</td>
            @* <td>
                <form method="post" asp-page-handler="BookNow">
                    <input type="hidden" name="flightID" value="@flight.flightID" />
                            <button type="submit" class="btn btn-outline-success">Book Now</button>
                            
                </form>
            </td> *@
            <td>
                        <a asp-page="/Booking/CreateBooking" asp-route-flightID="@flight.flightID"
                           asp-route-airlineId="@flight.airlineId"
                           asp-route-origin="@flight.origin"
                           asp-route-destination="@flight.destination"
                           asp-route-departureTime="@flight.departureTime"
                           asp-route-arrivalTime="@flight.arrivalTime"
                               asp-route-ticketPrice="@flight.ticketPrice"
                           asp-route-availableSeats="@flight.availableSeats" class="btn btn-outline-success">Book Now</a>
            </td>
        </tr>
    }
        </tbody>
    </table>
</div>
